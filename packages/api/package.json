{
  "name": "@app/api",
  "scripts": {
    "test": "bun test",
    "dev": "bun run --hot src/index.ts",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f",
    "db:reset": "bun x prisma migrate reset",
    "db:migrate": "bun x prisma migrate dev && bun x prisma generate",
    "db:generate": "bun x prisma generate",
    "db:deploy": "bun x prisma migrate deploy",
    "postinstall": "bun x prisma generate"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@types/node-cron": "^3.0.11",
    "bcryptjs": "^3.0.3",
    "hono": "^4.11.3",
    "ioredis": "^5.9.2",
    "node-cron": "^4.2.1",
    "pg": "^8.17.1",
    "prisma": "^7.2.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.3"
  }
}
