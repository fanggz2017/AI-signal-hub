{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "types": ["bun"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["../../packages/*/src"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },

  "include": ["src/**/*", "prisma/**/*", "prisma.config.ts"]
}
